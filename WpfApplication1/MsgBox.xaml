        Title="MsgBox" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Source="/Images/AuthorDetector3_grayscale.png" HorizontalAlignment="Center"/>
        <Button Content="OK" HorizontalAlignment="Center" Margin="0,175,0,0" VerticalAlignment="Top" Width="75" Click="OK_Click"/>
